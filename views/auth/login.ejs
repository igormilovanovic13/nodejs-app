<%- include('../includes/head.ejs') %>
    <!-- <link rel="stylesheet" href="/css/forms.css"> -->
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/record-list.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body>
   

    <main>
        <% if(errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <ul class="record__list">
            <li class="record__item">
                <form class="login-form" action="/login" method="POST">
                    <img class="center-image" src="/images/moto-plus-logo-bez-pozadine-do_FOR_MAIL.png" alt=""><br>
                    <div class="form-group align-and-cetner-items">
                        <label for="email">E-Mail</label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Unesite E-mail adresu">
                    </div>
                    <div class="form-group align-and-cetner-items">
                        <label for="password">Loznika</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Unesite lozinku">
                    </div><br>
                    <div class="center-btn">
                        <button class="btn btn-success" type="submit" id="submit">Uloguj se</button>
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                </form><br>
                <div class="centered reset-password">
                    <a href="/reset">Resetuj lozinku</a>
                </div>
                <div class="centered signup">
                    <a href="/signup">Registruj se</a>
                </div>
            </li>
        </ul>
    </main>
<%- include('../includes/end.ejs') %>