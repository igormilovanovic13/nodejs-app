<%- include('../../includes/head.ejs') %>
<link rel="stylesheet" href="/css/record-list.css">
<link rel="stylesheet" href="/css/loader.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body>
    <%- include('../../includes/navigation.ejs') %>
    <main>
        <div>
            <div class="loader"></div>
            <div class="background-backdrop"></div>
            <form enctype="multipart/form-data" id="multipart-form-data">
                <ul class="record__list">
                    <li class="record__item">
                        <div class="form-group">
                            <label for="noteforreport">Napomena nakon servisa:</label>
                            <textarea name="noteforreport" class="form-control" id="noteforreport" rows="10" placeholder="Ovde unesite pojasnjenje o ishodu reklamacije" required></textarea>
                        </div><br>
                        <div class="form-group">
                            <label for="photos">Slike sa prijema:</label>
                            <input type="file" name="photos" class="form-control-file" id="photos" multiple> 
                        </div><br>
                        <div class="form-group row">
                            <div class="col-sm-5"></div>
                            <div class="col-sm-7">
                                <input class="btn btn-warning btn-lg" id="add-record" type="submit" value="Potvrdi">
                                <!-- <input type="hidden" name="recordId" value="recordId"> -->
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            </div>
                        </div>
                    </li>
                </ul>
            </form>
        </div>
    </main>
    <script src="/scripts/create-record/send-record-data-to-server.js"></script>
    <script src="/scripts/loader-toggle.js"></script>
<%- include('../../includes/end.ejs') %>