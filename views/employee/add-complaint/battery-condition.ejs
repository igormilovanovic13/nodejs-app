<%- include('../../includes/head.ejs') %>
<link rel="stylesheet" href="/css/record-list.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body>
    <%- include('../../includes/navigation.ejs') %>
    <main>
        <div>
            <form action="/add-complaint/battery-condition" method="POST">
                <ul class="record__list">
                    <li class="record__item">
                        <div class="form-group row">
                            <label for="physical-damage" class="col-sm-8 col-form-label">Da li baterija ima fizickih ostecenja?</label>
                            <div class="col-sm-4">
                                <select name="physicalDamage" class="form-control form-control-sm" id="physical-damage">
                                    <option value="no">Ne, nema</option>
                                    <option value="yes">Da, ima</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="dirt-condition" class="col-sm-8 col-form-label">Da li baterija prljava/zamašćena?</label>
                            <div class="col-sm-4">
                                <select name="dirtCondition" class="form-control form-control-sm" id="dirt-condition">
                                    <option value="no">Nije</option>
                                    <option value="yes">Jeste</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="contact-damage" class="col-sm-8 col-form-label">Stanje stubića?</label>
                            <div class="col-sm-4">
                                <select name="contactDamage" class="form-control form-control-sm" id="contact-damage">
                                    <option value="no">Ništa od navedenog</option>
                                    <option value="yes-sulf">Sulfatizovani</option>
                                    <option value="yes-ost">Oštećeni</option>
                                    <option value="yes-both">Oštećeni i Sulfatizovani</option>
                                </select>
                            </div>
                        </div>
                    </li><br>
                    <li class="record__item">
                        <div class="form-group row">
                            <label for="static-dischrage" class="col-sm-12 col-form-label"><b>PODACI IZMERENI NA PRIJEMU:</b></label>
                        </div>
                        <%- include('../../includes/before-service-measure.ejs') %>
                    </li><br>
                    <li class="record__item">
                        <div class="form-group row">
                            <label for="static-dischrage" class="col-sm-12 col-form-label"><b>PODACI POSLE SERVISIRANJA BATERIJE:</b></label>
                        </div>
                        <%- include('../../includes/after-service-measure.ejs') %>
                    </li><br>
                    <li class="record__item">
                        <div class="form-group row">
                            <div class="col-sm-10"></div>
                            <div class="col-sm-2">
                              <input id="add-battery-info" class="btn btn-warning" type="submit" value="Dalje">
                              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                              <!-- <input type="hidden" name="partnerId" value="partnerInfo.id">
                              <input type="hidden" name="recordId" value="recordInfo.id"> -->
                            </div>
                        </div>
                    </li>
                </ul>
            </form>
        </div>
    </main>
    <script src="/scripts/create-record/more-battery-data.js"></script>
<%- include('../../includes/end.ejs') %>