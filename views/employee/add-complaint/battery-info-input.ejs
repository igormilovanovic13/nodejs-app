<%- include('../../includes/head.ejs') %>
<link rel="stylesheet" href="/css/record-list.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body>

    <%- include('../../includes/navigation.ejs') %>
    <main>
        <div class="battery__info-input">
          <form action="/add-complaint/battery-info-input" method="POST">
            <ul class="record__list">
              <li class="record__item">
                  <div class="form-group row">
                      <label for="battery-resolving-date" class="col-sm-4 col-form-label">Datum rešavanja reklam.:</label>
                      <div class="col-sm-8">
                        <input type="date" class="form-control" id="battery-resolving-date" name="resolveDate" required>
                      </div>
                  </div>
                  <div class="form-group row">
                      <label for="report-number" class="col-sm-4 col-form-label">Broj zapisnika:</label>
                      <div class="col-sm-8">
                        <input type="text" class="form-control" id="report-number" name="reportNumber" readonly="readonly" value="" required>
                      </div>
                  </div>

                  <div class="form-group row">
                      <label for="battery-date-of-complaint" class="col-sm-4 col-form-label">Datum prijema:</label>
                      <div class="col-sm-8">
                        <input type="date" class="form-control" id="battery-date-of-complaint" name="complaintDate" required>
                      </div>
                  </div>
                  <div class="form-group row">
                      <label for="receive-number" class="col-sm-4 col-form-label">Broj prijema:</label>
                      <div class="col-sm-8">
                        <input type="text" class="form-control" id="receive-number" placeholder="Unesite broj prijema" name="receiveNumber" required>
                      </div>
                  </div>
                  <div class="form-group row">
                      <label for="battery-date-of-purchase" class="col-sm-4 col-form-label">Datum prodaje:</label>
                      <div class="col-sm-8">
                        <input type="date" class="form-control" id="battery-date-of-purchase" name="soldDate" required> 
                      </div>
                  </div>
                  <div class="form-group row">
                    <label for="check-number" class="col-sm-4 col-form-label">Broj računa:</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control" class="form-control" id="check-number" placeholder="Unesite broj računa" name="checkNumber" required>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="vehicle-type" class="col-sm-4 col-form-label">Tip vozila:</label>
                      <div class="col-sm-8">
                        <select id="vehicle-type" class="form-control" name="vehicleType" aria-label="Default select example" required>
                          <option value="Teretno">Teretno</option>
                          <option value="Putničko">Putničko</option>
                          <option value="Autobus">Autobus</option>
                          <option value="Traktor">Traktor</option>
                          <option value="Radna mašina">Radna mašina</option>
                          <option value="Ostalo">Ostalo</option>
                        </select>
                      </div>
                    </div>
                  <div class="form-group row">
                  <label for="battery-type" class="col-sm-4 col-form-label">Tip akumulatora:</label>
                    <div class="col-sm-8">
                      <select id="battery-type" class="form-control" name="batteryType" required>
                        <% productList.forEach(product => { %>
                        <option value="<%= product.name %>"><%= product.name %></option>
                        <% }); %>
                      </select>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="battery-number" class="col-sm-4 col-form-label">Broj akumulatora:</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control" id="battery-number" placeholder="Unesite broj akumulatora" name="batteryNumber" required>
                      <input type="hidden" name="partnerId" value="<%= partnerId %>">
                    </div>
                  </div><br>
                  <div class="form-group row">
                    <div class="col-sm-10"></div>
                    <div class="col-sm-2">
                      <button id="add-battery-info" class="btn btn-warning" type="submit">Dalje</button>
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </div>
                  </div>
                </li><br>
            </ul> 
          </form>
        </div>
    </main>
    <script src="/scripts/create-record/collect-battery-data.js"></script>
<%- include('../../includes/end.ejs') %>